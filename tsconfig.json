{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es2018",
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
