{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "build/client",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/client/**/*.ts"
    ]
}
